universe = vanilla
executable = exec.sh
output = $(Cluster)_$(Process).out

should_transfer_files = YES
when_to_transfer_output = ON_EXIT

requirements = (GPUs_Capability >= 4)
request_gpus = 1

+WantGPULab = true
+GPUJobLength = "short"

request_cpus = 1
request_memory = 10MB
request_disk = 10MB

log = $(Cluster)_$(Process).log
error = $(Cluster)_$(Process).err

queue 1
